{% extends "camera_base.html.twig" %}

{% block title %}No Cameras Available{% endblock %}

{% block content %}
<div class="d-flex flex-column align-items-center justify-content-center text-white h-100">
    <i class="bi bi-camera-video-off fs-1 mb-4"></i>
    <h2>No Cameras Available</h2>
    <p class="text-muted text-center">
        {% if building is defined %}
            There are currently no active cameras configured for {{ building.name }}.
        {% else %}
            There are currently no active cameras configured in the system.
        {% endif %}
    </p>
    
    <div class="mt-4">
        <a href="{{ path('buildings_list') }}" class="btn btn-primary">
            <i class="bi bi-building"></i> View All Buildings
        </a>
    </div>
</div>
{% endblock %}
