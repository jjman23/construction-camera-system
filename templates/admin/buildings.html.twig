{% extends "admin/base.html.twig" %}

{% block title %}Buildings - Construction Camera Admin{% endblock %}
{% block page_title %}Buildings Management{% endblock %}

{% block page_actions %}
    <a href="{{ path('admin_building_new') }}" class="btn btn-primary">
        <i class="bi bi-plus"></i> Add Building
    </a>
{% endblock %}

{% block content %}
<div class="card shadow">
    <div class="card-header">
        <h6 class="m-0 font-weight-bold text-primary">
            <i class="bi bi-building"></i> All Buildings
        </h6>
    </div>
    <div class="card-body">
        {% if buildings|length > 0 %}
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Order</th>
                            <th>Name</th>
                            <th>Slug</th>
                            <th>Description</th>
                            <th>Cameras</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for building in buildings %}
                        <tr>
                            <td>
                                <span class="badge bg-secondary">{{ building.displayOrder }}</span>
                            </td>
                            <td>
                                <strong>{{ building.name }}</strong>
                            </td>
                            <td>
                                <code>{{ building.slug }}</code>
                            </td>
                            <td>
                                {% if building.description %}
                                    {{ building.description|length > 50 ? building.description|slice(0, 50) ~ '...' : building.description }}
                                {% else %}
                                    <em class="text-muted">No description</em>
                                {% endif %}
                            </td>
                            <td>
                                <span class="badge bg-info">
                                    {{ building.cameras|length }} total
                                </span>
                                <br>
                                <small class="text-success">{{ building.activeCameras|length }} active</small>
                            </td>
                            <td>
                                {% if building.active %}
                                    <span class="badge bg-success">Active</span>
                                {% else %}
                                    <span class="badge bg-secondary">Inactive</span>
                                {% endif %}
                            </td>
                            <td>
                                <small>{{ building.createdAt|date('M j, Y') }}</small>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('admin_building_edit', {id: building.id}) }}" 
                                       class="btn btn-sm btn-outline-primary" 
                                       title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a href="{{ path('admin_cameras') }}?building={{ building.id }}" 
                                       class="btn btn-sm btn-outline-info" 
                                       title="View Cameras">
                                        <i class="bi bi-camera"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="text-center py-5">
                <i class="bi bi-building fs-1 text-muted"></i>
                <h5 class="mt-3 text-muted">No Buildings Found</h5>
                <p class="text-muted">Get started by adding your first building.</p>
                <a href="{{ path('admin_building_new') }}" class="btn btn-primary">
                    <i class="bi bi-plus"></i> Add First Building
                </a>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
