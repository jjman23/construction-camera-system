{% extends "admin/base.html.twig" %}

{% block title %}{{ is_edit ? 'Edit' : 'Add' }} Building - Construction Camera Admin{% endblock %}
{% block page_title %}{{ is_edit ? 'Edit Building' : 'Add New Building' }}{% endblock %}

{% block page_actions %}
    <a href="{{ path('admin_buildings') }}" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to Buildings
    </a>
{% endblock %}

{% block content %}
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow">
            <div class="card-header">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="bi bi-{{ is_edit ? 'pencil' : 'plus' }}"></i> 
                    {{ is_edit ? 'Edit Building' : 'New Building' }}
                </h6>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="name" class="form-label">
                                    <i class="bi bi-building"></i> Building Name <span class="text-danger">*</span>
                                </label>
                                <input type="text" 
                                       class="form-control" 
                                       id="name" 
                                       name="name" 
                                       value="{{ building.id ? building.name : '' }}" 
                                       required
                                       placeholder="e.g., Gateway Building">
                                <div class="form-text">The display name for this building</div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="slug" class="form-label">
                                    <i class="bi bi-link-45deg"></i> URL Slug <span class="text-danger">*</span>
                                </label>
                                <input type="text" 
                                       class="form-control" 
                                       id="slug" 
                                       name="slug" 
                                       value="{{ building.id ? building.slug : '' }}" 
                                       required
                                       pattern="[a-z0-9-]+"
                                       placeholder="e.g., gateway">
                                <div class="form-text">Lowercase letters, numbers, and hyphens only</div>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">
                            <i class="bi bi-card-text"></i> Description
                        </label>
                        <textarea class="form-control" 
                                  id="description" 
                                  name="description" 
                                  rows="3"
                                  placeholder="Optional description of this building">{{ building.id ? building.description : '' }}</textarea>
                        <div class="form-text">Optional description for internal reference</div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="display_order" class="form-label">
                                    <i class="bi bi-sort-numeric-up"></i> Display Order
                                </label>
                                <input type="number" 
                                       class="form-control" 
                                       id="display_order" 
                                       name="display_order" 
                                       value="{{ building.id ? building.displayOrder : 0 }}" 
                                       min="0"
                                       placeholder="0">
                                <div class="form-text">Lower numbers appear first in navigation</div>
                            </div>
                        </div>

                        {% if is_edit %}
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">
                                    <i class="bi bi-toggle-on"></i> Status
                                </label>
                                <div class="form-check">
                                    <input class="form-check-input" 
                                           type="checkbox" 
                                           id="active" 
                                           name="active" 
                                           value="1"
                                           {{ building.id and building.active ? 'checked' : '' }}>
                                    <label class="form-check-label" for="active">
                                        Active (visible to users)
                                    </label>
                                </div>
                                <div class="form-text">Inactive buildings are hidden from public view</div>
                            </div>
                        </div>
                        {% endif %}
                    </div>

                    {% if is_edit and building.cameras|length > 0 %}
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i>
                        <strong>Associated Cameras:</strong> This building currently has 
                        {{ building.cameras|length }} camera(s) associated with it.
                    </div>
                    {% endif %}

                    <div class="border-top pt-3">
                        <div class="d-flex justify-content-between">
                            <a href="{{ path('admin_buildings') }}" class="btn btn-secondary">
                                <i class="bi bi-x"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-{{ is_edit ? 'check' : 'plus' }}"></i> 
                                {{ is_edit ? 'Update Building' : 'Create Building' }}
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        {% if is_edit %}
        <div class="card shadow mt-4">
            <div class="card-header">
                <h6 class="m-0 font-weight-bold text-info">
                    <i class="bi bi-camera"></i> Cameras in this Building
                </h6>
            </div>
            <div class="card-body">
                {% if building.cameras|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Status</th>
                                    <th>Snapshots</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for camera in building.cameras %}
                                <tr>
                                    <td>{{ camera.name }}</td>
                                    <td>
                                        {% if camera.active %}
                                            <span class="badge bg-success">Active</span>
                                        {% else %}
                                            <span class="badge bg-secondary">Inactive</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if camera.snapshotEnabled %}
                                            <span class="badge bg-info">Enabled</span>
                                        {% else %}
                                            <span class="badge bg-warning">Disabled</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <a href="{{ path('admin_camera_edit', {id: camera.id}) }}" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <p class="text-muted mb-0">No cameras assigned to this building yet.</p>
                {% endif %}
                
                <div class="mt-3">
                    <a href="{{ path('admin_camera_new') }}?building={{ building.id }}" class="btn btn-sm btn-success">
                        <i class="bi bi-plus"></i> Add Camera to this Building
                    </a>
                </div>
            </div>
        </div>
        {% endif %}
    </div>
</div>

<script>
// Auto-generate slug from name
document.getElementById('name').addEventListener('input', function() {
    const slug = this.value
        .toLowerCase()
        .replace(/[^a-z0-9\s-]/g, '')
        .replace(/\s+/g, '-')
        .replace(/-+/g, '-')
        .replace(/^-|-$/g, '');
    
    // Only update if slug field is empty or we're creating a new building
    const slugField = document.getElementById('slug');
    if (!slugField.value || !{{ is_edit ? 'true' : 'false' }}) {
        slugField.value = slug;
    }
});
</script>
{% endblock %}
