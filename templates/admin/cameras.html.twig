{% extends "admin/base.html.twig" %}

{% block title %}Cameras - Construction Camera Admin{% endblock %}
{% block page_title %}Camera Management{% endblock %}

{% block page_actions %}
    <a href="{{ path('admin_camera_new') }}" class="btn btn-primary">
        <i class="bi bi-plus"></i> Add Camera
    </a>
{% endblock %}

{% block content %}
<div class="card shadow">
    <div class="card-header">
        <h6 class="m-0 font-weight-bold text-primary">
            <i class="bi bi-camera"></i> All Cameras
        </h6>
    </div>
    <div class="card-body">
        {% if cameras|length > 0 %}
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Building</th>
                            <th>Camera</th>
                            <th>RTSP URL</th>
                            <th>Settings</th>
                            <th>Status</th>
                            <th>Last Snapshot</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for camera in cameras %}
                        <tr>
                            <td>
                                <strong>{{ camera.building.name }}</strong><br>
                                <small class="text-muted">{{ camera.building.slug }}</small>
                            </td>
                            <td>
                                <strong>{{ camera.name }}</strong>
                                {% if camera.description %}
                                    <br><small class="text-muted">{{ camera.description|slice(0, 50) }}{{ camera.description|length > 50 ? '...' : '' }}</small>
                                {% endif %}
                                <br>
                                <span class="badge bg-secondary">Order: {{ camera.displayOrder }}</span>
                            </td>
                            <td>
                                <code class="small">{{ camera.rtspUrl|slice(0, 30) }}...</code>
                            </td>
                            <td>
                                <div class="d-flex flex-column gap-1">
                                    {% if camera.snapshotEnabled %}
                                        <span class="badge bg-success">Snapshots ON</span>
                                        <small>Every {{ camera.snapshotInterval }}s</small>
                                        <small>{{ camera.startTime|date('H:i') }} - {{ camera.stopTime|date('H:i') }}</small>
                                    {% else %}
                                        <span class="badge bg-warning">Snapshots OFF</span>
                                    {% endif %}
                                    
                                    {% if camera.galleryEnabled %}
                                        <span class="badge bg-info">Gallery ON</span>
                                    {% else %}
                                        <span class="badge bg-secondary">Gallery OFF</span>
                                    {% endif %}
                                    
                                    {% if camera.liveEnabled %}
                                        <span class="badge bg-primary">Live ON</span>
                                    {% else %}
                                        <span class="badge bg-secondary">Live OFF</span>
                                    {% endif %}
                                </div>
                            </td>
                            <td>
                                {% if camera.active %}
                                    <span class="badge bg-success">Active</span>
                                {% else %}
                                    <span class="badge bg-secondary">Inactive</span>
                                {% endif %}
                                
                                <br>
                                {% if camera.lastSnapshotStatus == 'success' %}
                                    <span class="badge bg-success">{{ camera.lastSnapshotStatus }}</span>
                                {% elseif camera.lastSnapshotStatus == 'failed' %}
                                    <span class="badge bg-danger">{{ camera.lastSnapshotStatus }}</span>
                                {% elseif camera.lastSnapshotStatus == 'skipped' %}
                                    <span class="badge bg-warning">{{ camera.lastSnapshotStatus }}</span>
                                {% else %}
                                    <span class="badge bg-secondary">{{ camera.lastSnapshotStatus }}</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if camera.lastSnapshotAt %}
                                    <small>{{ camera.lastSnapshotAt|date('M j, H:i') }}</small>
                                {% else %}
                                    <small class="text-muted">Never</small>
                                {% endif %}
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('admin_camera_edit', {id: camera.id}) }}" 
                                       class="btn btn-sm btn-outline-primary" 
                                       title="Edit Camera">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    {% if camera.snapshotEnabled %}
                                    <form method="post" 
                                          action="{{ path('admin_manual_snapshot', {id: camera.id}) }}" 
                                          style="display: inline;">
                                        <button type="submit" 
                                                class="btn btn-sm btn-outline-success" 
                                                title="Manual Snapshot"
                                                onclick="return confirm('Take a manual snapshot now?')">
                                            <i class="bi bi-camera"></i>
                                        </button>
                                    </form>
                                    {% endif %}
                                    <a href="/view/{{ camera.building.slug }}/{{ camera.id }}" 
                                       class="btn btn-sm btn-outline-info" 
                                       title="View Live"
                                       target="_blank">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="text-center py-5">
                <i class="bi bi-camera fs-1 text-muted"></i>
                <h5 class="mt-3 text-muted">No Cameras Found</h5>
                <p class="text-muted">Add cameras to start monitoring your construction sites.</p>
                <a href="{{ path('admin_camera_new') }}" class="btn btn-primary">
                    <i class="bi bi-plus"></i> Add First Camera
                </a>
            </div>
        {% endif %}
    </div>
</div>

{% if cameras|length > 0 %}
<div class="row mt-4">
    <div class="col-md-4">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title">Total Cameras</h6>
                        <h2>{{ cameras|length }}</h2>
                    </div>
                    <div class="align-self-center">
                        <i class="bi bi-camera fs-2"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title">Snapshot Enabled</h6>
                        <h2>{{ cameras|filter(c => c.snapshotEnabled)|length }}</h2>
                    </div>
                    <div class="align-self-center">
                        <i class="bi bi-camera-fill fs-2"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title">Active Cameras</h6>
                        <h2>{{ cameras|filter(c => c.active)|length }}</h2>
                    </div>
                    <div class="align-self-center">
                        <i class="bi bi-check-circle fs-2"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endif %}
{% endblock %}
